{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "npm run vercel-build",
        "maxLambdaSize": "50mb",
        "zeroConfig": false
      }
    }
  ],
  "routes": [
    {
      "src": "/instruments(.*)",
      "dest": "/instruments$1",
      "headers": {
        "x-middleware-skip": "true",
        "cache-control": "no-store, must-revalidate",
        "pragma": "no-cache",
        "expires": "0"
      }
    },
    {
      "src": "/api/instruments-bypass",
      "dest": "/api/instruments-bypass",
      "headers": {
        "x-middleware-skip": "true",
        "cache-control": "no-store, must-revalidate",
        "pragma": "no-cache",
        "expires": "0"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "${NEXT_PUBLIC_SUPABASE_URL}",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "${NEXT_PUBLIC_SUPABASE_ANON_KEY}",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY": "${NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY}",
    "CLERK_SECRET_KEY": "${CLERK_SECRET_KEY}",
    "VERCEL_BUILD_STEP": "true",
    "SKIP_STATIC_GENERATION": "true",
    "BYPASS_INSTRUMENTS_PRERENDER": "true"
  },
  "functions": {
    "app/instruments/**": {
      "includeFiles": "app/instruments/**",
      "memory": 512,
      "maxDuration": 10
    },
    "app/api/instruments-bypass/**": {
      "includeFiles": "app/api/instruments-bypass/**",
      "memory": 512,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_SUPABASE_URL": "${NEXT_PUBLIC_SUPABASE_URL}",
      "NEXT_PUBLIC_SUPABASE_ANON_KEY": "${NEXT_PUBLIC_SUPABASE_ANON_KEY}",
      "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY": "${NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY}",
      "CLERK_SECRET_KEY": "${CLERK_SECRET_KEY}",
      "VERCEL_BUILD_STEP": "true",
      "SKIP_STATIC_GENERATION": "true"
    }
  }
} 
